<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user"
    android:background="#E8ECE8">

    <LinearLayout
        android:id="@+id/tool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DCDCDC"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/avatar_home"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:layout_alignParentStart="true"
                    />
                <TextView
                    android:id="@+id/name_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20dp"
                    android:layout_centerInParent="true"
                    />
                <ImageView
                    android:id="@+id/logout"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/logout"
                    android:layout_marginTop="5dp"
                    />
            </RelativeLayout>
        </Toolbar>

    </LinearLayout>

    <ScrollView
        android:id="@+id/srcoll_showbio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fillViewport="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/img_showbio"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="65dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/user" />

                <TextView
                    android:id="@+id/txt_showbio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/img_showbio"

                    android:text="@string/profile_myprofile"
                    android:textColor="@color/black"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/txt_smomName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_showbio"
                    android:layout_marginTop="25dp"
                    android:layout_toLeftOf="@id/txt_showbio"
                    android:text="@string/profile_fullname"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txt_showname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_showbio"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="35dp"
                    android:layout_toRightOf="@+id/txt_smomName"
                    android:text="อัชเชวินท์ นิยมพันธุ์"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txt_smomAge"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_below="@+id/txt_showname"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@id/txt_showbio"
                    android:text="@string/profile_age"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txt_showage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_showname"
                    android:layout_toRightOf="@+id/txt_smomAge"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    />

                <TextView
                    android:id="@+id/txt_sYmomAge"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_below="@+id/txt_showname"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/txt_showage"
                    android:text="20ปี"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txt_sblood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_showage"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="-42dp"
                    android:layout_toLeftOf="@id/txt_showbio"
                    android:text="@string/profile_phone_number"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txt_showblood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_showage"
                    android:layout_marginLeft="56dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/txt_sblood"
                    android:text="0973012926"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txt_sweight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_sblood"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@id/txt_showbio"
                    android:text="@string/profile_area"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txt_showweight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_sblood"
                    android:layout_toRightOf="@+id/txt_sweight"
                    android:layout_marginLeft="10dp"

                    android:layout_marginTop="10dp"
                    android:text="11ไร่"
                    android:textColor="@color/black"
                    android:textSize="20dp" />



                <TextView
                    android:id="@+id/txt_shight"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_below="@+id/txt_sweight"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@id/txt_showbio"
                    android:text="@string/profile_address"
                    android:textColor="@color/black"
                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/txt_showshight"
                    android:layout_width="224dp"
                    android:layout_height="87dp"
                    android:layout_below="@+id/txt_sweight"
                    android:layout_marginStart="14dp"
                    android:layout_marginLeft="-156dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/txt_shight"
                    android:layout_toRightOf="@id/txt_showbio"
                    android:text="476/ม.2 ต.กุมภวาปี อ.กุมภวาปี จ.อุดรธานี 41110"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/userpic"
                    android:layout_width="338dp"
                    android:layout_height="148dp"
                    android:layout_below="@+id/txt_shight"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/jet"
                    android:layout_marginTop="72dp"
                    android:layout_marginRight="30dp"
                  />


                <Button
                    android:id="@+id/btn_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/userpic"
                    android:layout_marginTop="20dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/red_style"
                    android:gravity="center"
                    android:text="@string/profile_edit"
                    android:textSize="20sp"
                    android:layout_marginBottom="30dp"/>

            </RelativeLayout>
        </TableLayout>

    </ScrollView>
</RelativeLayout>