<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".money">



    <android.support.v7.widget.CardView
        android:id="@+id/card_dnews1"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_showbio"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/money" />


            <LinearLayout
                android:id="@+id/tool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

            </LinearLayout>

            <TextView
                android:id="@+id/txt_showbio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/img_showbio"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="11dp"
                android:layout_toRightOf="@+id/img_showbio"
                android:text="@string/Dividend_Information"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <FrameLayout
        android:layout_below="@+id/card_dnews1"
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="678dp"
        tools:ignore="MissingConstraints">

    </FrameLayout>

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DCDCDC">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/avatar_home"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:layout_alignParentStart="true" />
            <ImageView
                android:id="@+id/logout"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/logout" />
            <TextView
                android:id="@+id/name_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text=""
                android:textSize="20dp" />
        </RelativeLayout>
    </Toolbar>

</RelativeLayout>